<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_inform_privacy"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="@string/text_master_privacy"/>

    <WebView
        android:id="@+id/webView"
        android:layout_below="@+id/text_inform_privacy"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_for_exit"
        android:background="@color/button_master"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="@string/button_back_privacy"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>